<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" focusTraversable="true" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="team.elrant.audioplayer.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Enter the path to your Music folder:">
      <font>
         <Font name="Arial" size="12.0" />
      </font>
   </Text>
   <TextField promptText="Folder\Music" fx:id="pathField">
      <font>
         <Font name="Arial" size="12.0" />
      </font>
   </TextField>
    <Button onAction="#onHelloButtonClick" text="Start">
      <font>
         <Font name="Arial" size="12.0" />
      </font></Button>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</VBox>
